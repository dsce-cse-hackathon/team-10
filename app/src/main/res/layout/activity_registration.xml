<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.uddeshyachaplot.firebasebeg.Registration">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/patients_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Enter your name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/patients_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/patient_age"
        android:hint="Enter your age" />

    <Button
        android:text="Save datails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp" />

    <Button
        android:text="Family reference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:id="@+id/b3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/patient_age"
        android:layout_alignParentStart="true"
        android:id="@+id/patients_gender"
        android:hint="Male/Female" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/patients_gender"
        android:layout_alignEnd="@+id/patients_gender"
        android:layout_marginTop="21dp"
        android:id="@+id/patients_family_ref"
        android:hint="Enter parents reference id" />

    <Button
        android:text="Go to Case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b2"
        android:layout_alignStart="@+id/b2"
        android:id="@+id/b4" />
</RelativeLayout>
